generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Slider {
  id        String   @id @default(cuid())
  arSlider  String
  enSlider  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model StoreImage {
  id                   String   @id @default(cuid())
  storeLogo            String
  categoryDefaultImage String
  productDefaultImage  String
  storeIcon            String
  vatLogo              String
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}

model Product {
  id            String   @id @default(cuid())
  model         String   @unique
  enDescription String   @unique
  price         Decimal  @default(0.0)
  isActive      Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  categoryId    String
  brandId       String
  salePrice     Decimal? @default(0.0)
  stock         Int      @default(0)
  arDescription String   @unique
  category      Category @relation(fields: [categoryId], references: [id])
  images        Image[]
  brand         Brand    @relation(fields: [brandId], references: [id])

  @@index([categoryId])
  @@index([brandId])
  @@map("products")
}

model Image {
  id        String   @id @default(cuid())
  productId String
  imageUrl  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  product   Product  @relation(fields: [productId], references: [id], onUpdate: Cascade)

  @@index([productId])
  @@map("images")
}

model Category {
  id        String    @id @default(cuid())
  imageUrl  String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  arName    String    @unique
  enName    String    @unique
  products  Product[]

  @@map("categories")
}

model Brand {
  id        String    @id @default(cuid())
  logoUrl   String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  arName    String    @unique
  enName    String    @unique
  products  Product[]
}
