generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Slider {
  id        String   @id @default(cuid())
  arSlider  String
  enSlider  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model StoreImage {
  id                   String   @id @default(cuid())
  storeLogo            String
  categoryDefaultImage String
  productDefaultImage  String
  storeIcon            String
  vatLogo              String
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}

model Product {
  id            String   @id @default(cuid())
  model         String   @unique
  enDescription String   @unique
  price         Float    @default(0.0)
  isActive      Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  categoryId    String
  category      Category @relation(fields: [categoryId], references: [id], onUpdate: Cascade)
  images        Image[]
  brandId       String
  brand         Brand    @relation(fields: [brandId], references: [id], onUpdate: Cascade)

  @@index([categoryId])
  @@index([brandId])
  @@map("products")
}

model Image {
  id        String   @id @default(cuid())
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  imageUrl  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([productId])
  @@map("images")
}

model Category {
  id        String    @id @default(cuid())
  name      String    @unique
  imageUrl  String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  products  Product[]

  @@map("categories")
}

model Brand {
  id        String    @id @default(cuid())
  enName    String    @unique
  arName    String    @unique
  logoUrl   String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  products  Product[]
}
